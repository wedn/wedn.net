{
  "name": "wedn.net",
  "version": "0.1.0",
  "description": "wedn.net site",
  "main": "core/index.js",
  "private": true,
  "scripts": {
    "preinstall": "git submodule init && git submodule update",
    "postinstall": "cd core/client && npm install && cd ../..",
    "build:client": "cd core/client && npm run build && cd ../..",
    "build:server": "echo \"build server\"",
    "build": "npm run build:server && npm run build:client",
    "serve": "babel-node .",
    "dev": "cross-env NODE_ENV=development nodemon --exec npm run serve --ignore core/client/",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wedn/wedn.net.git"
  },
  "keywords": [
    "iceStone",
    "wedn",
    "wedn.net",
    "zce",
    "汪磊",
    "micua",
    "micua.com"
  ],
  "author": "iceStone <ice@micua.com> (https://www.micua.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wedn/wedn.net/issues"
  },
  "homepage": "https://github.com/wedn/wedn.net#readme",
  "dependencies": {
    "glob": "^7.1.0",
    "handlebars": "^4.0.5",
    "koa": "^2.0.0-alpha.7",
    "koa-bodyparser": "^3.2.0",
    "koa-compose": "^3.2.0",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-error": "^2.1.0",
    "koa-json": "^1.1.3",
    "koa-logger": "^2.0.0",
    "koa-mount": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-session": "^3.3.1",
    "koa-static": "^3.0.0",
    "koa-views": "^5.1.2",
    "lodash.merge": "^4.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.16.0",
    "cross-env": "^3.1.3",
    "nodemon": "^1.10.2"
  }
}
