{
  "name": "wedn.net",
  "version": "0.1.0",
  "description": "wedn.net site",
  "main": "index.js",
  "private": true,
  "scripts": {
    "preinstall": "git submodule init && git submodule update",
    "postinstall": "cd client && npm install && cd ..",
    "serve": "nodemon . --exec babel-node --ignore client",
    "client": "cd client && npm run dev && cd ..",
    "build:server": "babel server -d dist -s",
    "build:client": "cd client && npm run build && cd ..",
    "build": "npm run build:server && npm run build:client",
    "dev": "concurrently --raw --kill-others \"npm run serve\" \"npm run client\"",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wedn/wedn.net.git"
  },
  "keywords": [
    "iceStone",
    "wedn",
    "wedn.net",
    "zce",
    "汪磊",
    "micua",
    "micua.com"
  ],
  "author": "iceStone <ice@micua.com> (https://www.micua.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wedn/wedn.net/issues"
  },
  "homepage": "https://github.com/wedn/wedn.net#readme",
  "dependencies": {
    "glob": "^7.1.1",
    "handlebars": "^4.0.5",
    "koa": "^2.0.0-alpha.7",
    "koa-bodyparser": "^3.2.0",
    "koa-compose": "^3.2.1",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-error": "^2.1.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^2.0.0",
    "koa-mount": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-session": "^3.4.0",
    "koa-static": "^3.0.0",
    "koa-views": "^5.0.2",
    "lodash.merge": "^4.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "concurrently": "^3.1.0",
    "cross-env": "^3.1.3",
    "nodemon": "^1.11.0"
  }
}
